{
  "input" : {
    "search" : {
      "request" : {
        "indices" : [ "docker" ],
        "types" : [ "event" ],
        "body" : {
          "size": 0,
          "query": {"range": {"@timestamp": {"gte": "now-10m"}}},
          "aggs": {
            "containers": {
              "terms": {"field": "type_instance.keyword"},
              "aggs": {
                "most_recent": {
                  "top_hits": {
                    "sort": [{"@timestamp": {"order": "desc"}}],
                    "size" : 1
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "trigger" : {
    "schedule" : {
      "interval" : "1m"
    }
  },
  "condition" : {
    "always" : {}
  },
  "actions" : {
    "log_payload" : {
      "logging" : {
        "text" : "PAYLOAD: {{ctx.payload}}",
        "level" : "info"
      }
    },
    "log_results" : {
      "transform" : {
        "chain": [
          { "script": "List ret = []; for (def x : ctx.payload.aggregations.containers.buckets) { ret.add(x.most_recent.hits.hits.0._source.type_instance); } return [ '_doc_test': ret]; " }
        ]
      },
      "index" : {
        "index" : "container-performance",
        "doc_type" : "container-stats"
      }
    }
  }
}

